---
import { ClientRouter } from 'astro:transitions';
import SpaceBackground from '../components/backgrounds/SpaceBackground';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import '@fontsource/inter';
import '@fontsource/space-grotesk';
import '@fontsource/jetbrains-mono';

interface Props {
	title: string;
	description?: string;
}

const { title = "TechFirm | Deep Space Intelligence", description = "High-performance software & AI development firm." } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:type" content="website" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body class="bg-primary-900 text-text-100 font-sans antialiased overflow-x-hidden selection:bg-accent-400/30 selection:text-white relative">
        <!-- Three.js Background -->
        <SpaceBackground client:only="react" />
        
        <div class="relative z-10">
            <Navbar />
            
            <!-- Main Content -->
            <main>
                <slot />
            </main>

            <Footer />
        </div>
	</body>
</html>
