---
const stats = [
  { value: '6+', label: 'Successful Projects' },
  { value: '5+', label: 'Happy Clients' },
  { value: '2+', label: 'Years Experience' },
  { value: '100%', label: 'Client Satisfaction' },
];
---

<section class="py-16 bg-gradient-to-br from-primary to-secondary text-white relative overflow-hidden">
  <!-- Overlay texture -->
  <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-30 mix-blend-overlay"></div>
  
  <div class="container mx-auto px-6 relative z-10">
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center divide-x divide-white/20">
      {stats.map((stat, index) => (
        <div class="p-4" data-aos="fade-up" data-aos-delay={index * 100}>
          <h3 class="text-4xl md:text-5xl font-bold mb-2 tracking-tight">{stat.value}</h3>
          <p class="text-white/80 font-medium text-lg">{stat.label}</p>
        </div>
      ))}
    </div>
  </div>
</section>
