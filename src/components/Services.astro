---
import { Code, ShoppingCart, Smartphone, Palette, Globe, PenTool } from 'lucide-react';

const services = [
  {
    title: 'Web Development',
    description: 'Custom, high-performance websites built with Astro, React, and Next.js.',
    icon: Code,
    color: 'text-blue-500',
    bg: 'bg-blue-500/10'
  },
  {
    title: 'E-Commerce',
    description: 'Scalable online stores using Shopify and WooCommerce to maximize sales.',
    icon: ShoppingCart,
    color: 'text-green-500',
    bg: 'bg-green-500/10'
  },
  {
    title: 'UI/UX Design',
    description: 'User-centric interfaces that engage visitors and drive conversions.',
    icon: Palette,
    color: 'text-indigo-500',
    bg: 'bg-indigo-500/10'
  },
  {
    title: 'Digital Marketing',
    description: 'SEO, PPC, and Social Media strategies to boost your online visibility.',
    icon: Globe,
    color: 'text-orange-500',
    bg: 'bg-orange-500/10'
  },
  {
    title: 'App Development',
    description: 'Native and cross-platform mobile apps for iOS and Android.',
    icon: Smartphone,
    color: 'text-pink-500',
    bg: 'bg-pink-500/10'
  },
  {
    title: 'Branding',
    description: 'Identity creation, logo design, and brand strategy for modern businesses.',
    icon: PenTool,
    color: 'text-yellow-500',
    bg: 'bg-yellow-500/10'
  }
];
---

<section id="services" class="py-24 bg-gray-50 relative overflow-hidden">
  <!-- Decorative background blob -->
  <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-primary/5 rounded-full blur-[100px] pointer-events-none"></div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="text-center max-w-3xl mx-auto mb-16" data-aos="fade-up">
      <h2 class="text-4xl font-bold bg-clip-text text-transparent bg-gradient-to-r from-primary to-secondary mb-4">
        Our Expertise
      </h2>
      <p class="text-gray-600 text-lg">
        We deliver end-to-end digital solutions tailored to your business goals.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {services.map((service, index) => (
        <div class="group p-8 rounded-2xl bg-white border border-gray-100 hover:border-primary/20 shadow-sm hover:shadow-xl transition-all duration-300 hover:-translate-y-1" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class={`w-14 h-14 rounded-xl ${service.bg} flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`}>
            <service.icon className={`w-7 h-7 ${service.color}`} />
          </div>
          <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary transition-colors">
            {service.title}
          </h3>
          <p class="text-gray-600 leading-relaxed">
            {service.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
