---
import { Github, Twitter, Linkedin, Mail, ArrowUpRight } from 'lucide-react';
import Section from './ui/Section.astro';
---

<footer class="relative border-t border-white/10 mt-auto backdrop-blur-md bg-black/30">
  <!-- Decorative Top Glow -->
  <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full max-w-7xl h-[1px] bg-gradient-to-r from-transparent via-secondary-500/50 to-transparent"></div>
  
  <div class="container mx-auto px-6 py-20 relative z-10">
    <div class="grid grid-cols-1 md:grid-cols-4 gap-12 mb-16">
      <div class="col-span-1 md:col-span-2 space-y-6">
        <a href="/" class="text-3xl font-bold tracking-tight text-white flex items-center gap-2 group">
           <span class="text-secondary-500 group-hover:text-accent-400 transition-colors duration-500">&lt;/&gt;</span> 
           <span class="text-transparent bg-clip-text bg-gradient-to-r from-white to-white/70 group-hover:from-secondary-400 group-hover:to-accent-400 transition-all duration-500">TechFirm</span>
        </a>
        <p class="text-text-300 max-w-md text-lg leading-relaxed">
          Transforming ideas into powerful digital solutions. We build scalable, high-performance software for the modern web.
        </p>
        <div class="flex gap-4 pt-4">
           {[Github, Twitter, Linkedin].map((Icon, i) => (
             <a href="#" class="w-10 h-10 rounded-full bg-white/5 border border-white/5 flex items-center justify-center text-text-300 hover:bg-secondary-500/20 hover:border-secondary-500/50 hover:text-secondary-400 transition-all duration-300 hover:-translate-y-1 hover:shadow-[0_0_15px_rgba(99,102,241,0.3)]">
               <Icon className="w-5 h-5" />
             </a>
           ))}
        </div>
      </div>

      <div>
        <h4 class="text-white font-bold mb-6 text-lg">Services</h4>
        <ul class="space-y-4">
          {['Custom Development', 'AI Integration', 'Mobile Apps', 'SaaS Solutions'].map(item => (
            <li>
              <a href="/services" class="text-text-300 hover:text-white transition-colors inline-flex items-center gap-2 group text-sm md:text-base">
                <span class="w-1.5 h-1.5 rounded-full bg-secondary-500 group-hover:bg-accent-400 transition-colors"></span>
                {item}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <div>
        <h4 class="text-white font-bold mb-6 text-lg">Company</h4>
        <ul class="space-y-4">
          {['About Us', 'Portfolio', 'Blog', 'Contact'].map(item => (
            <li>
              <a href={`/${item.toLowerCase().replace(' ', '-')}`} class="text-text-300 hover:text-accent-400 transition-colors text-sm md:text-base block hover:translate-x-1 duration-300">
                {item}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>

    <div class="pt-8 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-4">
      <p class="text-text-400 text-sm">
        &copy; {new Date().getFullYear()} TechFirm. All rights reserved.
      </p>
      <div class="flex gap-6 text-sm text-text-400">
        <a href="#" class="hover:text-secondary-400 transition-colors">Privacy Policy</a>
        <a href="#" class="hover:text-secondary-400 transition-colors">Terms of Service</a>
      </div>
    </div>
  </div>
</footer>
