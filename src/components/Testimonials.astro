---
import { Quote } from 'lucide-react';

const testimonials = [
  {
    content: "The team transformed our online presence. Our e-commerce sales increased by 40% within the first 3 months. Highly recommended!",
    author: "Rahul Sharma",
    role: "Director, Rakhoh Boilers",
    avatar: "https://i.pravatar.cc/150?u=a042581f4e29026704d"
  },
  {
    content: "Velith's understanding of our brand vision was spot on. They delivered a website that truly represents who we are.",
    author: "Priya Patel",
    role: "Marketing Head, TechFlow",
    avatar: "https://i.pravatar.cc/150?u=a042581f4e29026024d"
  },
  {
    content: "Exceptional service and support. The mobile app they built for us is intuitive and has received great feedback from our users.",
    author: "Amit Verma",
    role: "CEO, Verma Logistics",
    avatar: "https://i.pravatar.cc/150?u=a042581f4e29026704c"
  }
];
---

<section id="testimonials" class="py-24 bg-dark-bg relative overflow-hidden text-white">
  <!-- Background Elements -->
  <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_top_right,_var(--color-primary)_0%,_transparent_40%)] opacity-20 pointer-events-none"></div>

  <div class="container mx-auto px-6 relative z-10">
    <div class="mb-16 md:flex justify-between items-end">
        <div data-aos="fade-right">
            <h2 class="text-4xl font-bold mb-4">What Our Customers Say</h2>
            <p class="text-gray-400 max-w-lg">Read trusted reviews from our customers who have transformed their businesses with us.</p>
        </div>
        <div class="hidden md:block" data-aos="fade-left">
           <!-- Navigation buttons could go here -->
        </div>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <div class="bg-surface-dark border border-white/10 p-8 rounded-2xl relative group hover:border-primary/50 transition-colors duration-300" data-aos="fade-up" data-aos-delay={index * 150}>
          <Quote className="absolute top-8 right-8 text-primary/20 w-12 h-12 group-hover:text-primary/40 transition-colors" />
          
          <div class="mb-6 relative z-10">
              <div class="flex gap-1 text-yellow-400 mb-4">
                  {'★★★★★'.split('').map(star => <span>{star}</span>)}
              </div>
              <p class="text-gray-300 leading-relaxed italic">"{testimonial.content}"</p>
          </div>
          
          <div class="flex items-center gap-4 border-t border-white/10 pt-6 mt-6">
            <img src={testimonial.avatar} alt={testimonial.author} class="w-12 h-12 rounded-full border-2 border-primary/30" />
            <div>
              <h4 class="font-bold text-white">{testimonial.author}</h4>
              <p class="text-sm text-gray-500">{testimonial.role}</p>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
