---
// Logos can be SVGs or Img tags. I'll use placeholders or simple text with icons if no logos available.
// For now, I'll use text or simple SVGs for demonstration.

const techs = [
  'React', 'Node.js', 'Astro', 'Python', 'AWS', 'Figma', 'Shopify', 'WordPress',
  'Next.js', 'Tailwind', 'MongoDB', 'PostgreSQL'
];
---

<section class="py-12 bg-white border-y border-gray-100 overflow-hidden">
  <div class="container mx-auto px-6 mb-8 text-center">
      <p class="text-sm font-semibold text-gray-500 uppercase tracking-widest">Powered by Modern Technologies</p>
  </div>
  
  <div class="relative w-full overflow-hidden mask-linear-fade">
    <div class="flex gap-12 w-max animate-marquee hover:pause">
      <!-- Original Set -->
      {techs.map(tech => (
        <div class="flex items-center gap-3 text-2xl font-bold text-gray-400 grayscale hover:grayscale-0 hover:text-primary transition-all duration-300">
           {/* Placeholder for logo */}
           <span>{tech}</span>
        </div>
      ))}
      <!-- Duplicate for seamless loop -->
       {techs.map(tech => (
        <div class="flex items-center gap-3 text-2xl font-bold text-gray-400 grayscale hover:grayscale-0 hover:text-primary transition-all duration-300">
           <span>{tech}</span>
        </div>
      ))}
    </div>
    
    <!-- Fade edges -->
    <div class="absolute top-0 left-0 h-full w-20 bg-gradient-to-r from-white to-transparent pointer-events-none"></div>
    <div class="absolute top-0 right-0 h-full w-20 bg-gradient-to-l from-white to-transparent pointer-events-none"></div>
  </div>
</section>

<style>
.mask-linear-fade {
    /* mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent); */
}
.pause:hover {
    animation-play-state: paused;
}
</style>
