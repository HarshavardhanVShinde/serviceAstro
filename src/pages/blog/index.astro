---
import Layout from '../../layouts/Layout.astro';
import Section from '../../components/ui/Section.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<Layout title="Blog | TechFirm">
  <section class="pt-32 pb-20 text-center relative z-10">
    <div class="container mx-auto px-6">
        <h1 class="text-5xl md:text-7xl font-bold mb-6">Insights</h1>
        <p class="text-xl text-text-300 max-w-2xl mx-auto">
            Thoughts on technology, design, and the future of digital product development.
        </p>
    </div>
  </section>

  <Section class="min-h-screen relative z-10">
    <div class="container mx-auto px-6">
       <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
         {posts.map(post => (
           <a href={`/blog/${post.slug}`} class="group glass-panel rounded-2xl overflow-hidden hover:-translate-y-2 transition-transform duration-300 block backdrop-blur-md bg-white/5 border border-white/10">
             <div class="aspect-video overflow-hidden">
                <img src={post.data.image} alt={post.data.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
             </div>
             <div class="p-8">
                <div class="flex gap-2 mb-4">
                    {post.data.tags.map(tag => (
                        <span class="text-xs font-bold text-accent-400 uppercase tracking-widest bg-accent-400/10 px-2 py-1 rounded">{tag}</span>
                    ))}
                </div>
                <h2 class="text-2xl font-bold text-white mb-2 group-hover:text-secondary-500 transition-colors">{post.data.title}</h2>
                <p class="text-text-300 text-sm mb-4 line-clamp-3">{post.data.description}</p>
                <div class="flex items-center justify-between text-xs text-text-300 border-t border-white/5 pt-4">
                    <span>{post.data.author}</span>
                    <span>{post.data.pubDate.toLocaleDateString()}</span>
                </div>
             </div>
           </a>
         ))}
       </div>
    </div>
  </Section>
</Layout>
