---
import Layout from '../layouts/Layout.astro';
import Section from '../components/ui/Section.astro';
import Button from '../components/ui/Button';
import { ExternalLink, Github } from 'lucide-react';

const projects = [
  {
    title: 'Interview Kit',
    category: 'EdTech Platform',
    image: 'https://images.unsplash.com/photo-1516321318423-f06f85e504b3?q=80&w=2070&auto=format&fit=crop', // Coding placeholder
    tech: ['React', 'Node.js', 'MongoDB'],
    link: 'https://www.interviewkit.org/',
    github: '#'
  },
  {
    title: 'Aura Elixir',
    category: 'E-commerce',
    image: 'https://images.unsplash.com/photo-1595867275525-41a9632074d0?q=80&w=2064&auto=format&fit=crop', // Perfume placeholder
    tech: ['Next.js', 'Stripe', 'Tailwind'],
    link: 'https://www.auraelixir.co.in/',
    github: '#'
  },
  {
    title: 'Arohi Rhythms',
    category: 'Music Academy',
    image: 'https://images.unsplash.com/photo-1511379938547-c1f69419868d?q=80&w=2070&auto=format&fit=crop', // Music placeholder
    tech: ['Astro', 'React', 'Framer Motion'],
    link: 'https://arohirhythms.in/',
    github: '#'
  },
  {
    title: 'Restaurant Billing App',
    category: 'Desktop App',
    image: 'https://images.unsplash.com/photo-1556742049-0cfed4f7a07d?q=80&w=2070&auto=format&fit=crop', // Restaurant placeholder
    tech: ['Electron', 'React', 'SQLite'],
    link: '#',
    github: '#'
  },
  {
    title: 'Medical Billing Software',
    category: 'Enterprise Software',
    image: 'https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?q=80&w=2070&auto=format&fit=crop', // Medical placeholder
    tech: ['C#', '.NET', 'SQL Server'],
    link: '#',
    github: '#'
  },
  {
    title: 'Shops Billing Software',
    category: 'Point of Sale',
    image: 'https://images.unsplash.com/photo-1556740758-90de374c12ad?q=80&w=2070&auto=format&fit=crop', // Shop placeholder
    tech: ['Java', 'Spring Boot', 'MySQL'],
    link: '#',
    github: '#'
  },
  {
    title: 'Clothing Store Billing',
    category: 'Retail Software',
    image: 'https://images.unsplash.com/photo-1558769132-cb1aea458c5e?q=80&w=1974&auto=format&fit=crop', // Clothing placeholder
    tech: ['Python', 'Django', 'PostgreSQL'],
    link: '#',
    github: '#'
  }
];

const categories = ['All', 'Web App', 'Desktop App', 'E-commerce', 'Enterprise'];
---

<Layout title="Portfolio | TechFirm">
  <section class="pt-32 pb-12 text-center relative z-10">
     <div class="container mx-auto px-6">
        <h1 class="text-5xl md:text-7xl font-bold mb-6 tracking-tight">Our Work</h1>
        <p class="text-xl text-text-300 max-w-2xl mx-auto">
            A selection of projects that showcase our expertise and passion for quality.
        </p>
     </div>
  </section>

  <Section class="min-h-screen relative z-10">
    <div class="container mx-auto px-6">
        
        <!-- Filter Tabs -->
        <div class="flex flex-wrap justify-center gap-4 mb-16">
            {categories.map((cat, i) => (
                <button class={`px-6 py-2 rounded-full text-sm font-bold transition-all ${i === 0 ? 'bg-white text-primary-900' : 'bg-white/5 text-text-300 hover:bg-white/10'}`}>
                    {cat}
                </button>
            ))}
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {projects.map(project => (
                <div class="group relative rounded-2xl overflow-hidden bg-white/5 border border-white/5 hover:border-white/10 transition-all duration-500 backdrop-blur-sm">
                    <div class="aspect-video overflow-hidden">
                        <img 
                          src={project.image} 
                          alt={project.title} 
                          class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" 
                        />
                        <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center gap-4">
                            <a href={project.link} target="_blank" class="p-3 bg-white text-primary-900 rounded-full hover:scale-110 transition-transform">
                                <ExternalLink className="w-6 h-6" />
                            </a>
                        </div>
                    </div>
                    <div class="p-6">
                        <div class="flex justify-between items-start mb-4">
                            <div>
                                <span class="text-accent-400 text-[10px] font-bold uppercase tracking-widest mb-2 block">{project.category}</span>
                                <h3 class="text-lg font-bold text-white group-hover:text-secondary-500 transition-colors">{project.title}</h3>
                            </div>
                        </div>
                        <div class="flex flex-wrap gap-2">
                            {project.tech.map(t => (
                                <span class="px-2 py-1 rounded-full bg-white/5 text-[10px] text-text-300 border border-white/5">
                                    {t}
                                </span>
                            ))}
                        </div>
                    </div>
                </div>
            ))}
        </div>
    </div>
  </Section>

  <!-- Call to action -->
  <Section class="text-center py-24">
    <h2 class="text-3xl font-bold mb-6">Have a project in mind?</h2>
     <Button href="/contact" size="lg">Let's Build It</Button>
  </Section>
</Layout>
