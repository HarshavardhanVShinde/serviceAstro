---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Hero from '../components/Hero.astro';
import Stats from '../components/Stats.astro';
import TechSlider from '../components/TechSlider.astro';
import Testimonials from '../components/Testimonials.astro';
import Footer from '../components/Footer.astro';
import { ArrowRight, Code, Palette, Smartphone } from 'lucide-react';

const featuredServices = [
  { title: 'Web Development', icon: Code, desc: 'High-performance websites.' },
  { title: 'UI/UX Design', icon: Palette, desc: 'User-centric interfaces.' },
  { title: 'App Development', icon: Smartphone, desc: 'Native & cross-platform apps.' },
];
---

<Layout title="Velith Digital | Future-Proof Digital Solutions">
  <Navbar />
  <main>
    <Hero />
    <Stats />
    
    <!-- Service Teaser -->
    <section class="py-24 bg-gray-50">
      <div class="container mx-auto px-6">
        <div class="md:flex justify-between items-end mb-12">
            <div data-aos="fade-right">
                <h2 class="text-4xl font-bold text-gray-900 mb-4">What We Do</h2>
                <p class="text-xl text-gray-600 max-w-lg">We combine creativity and technology to build digital products that matter.</p>
            </div>
            <div data-aos="fade-left" class="hidden md:block">
                <a href="/services" class="text-primary font-bold flex items-center gap-2 hover:gap-3 transition-all">
                    View All Services <ArrowRight className="w-5 h-5" />
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {featuredServices.map((service, i) => (
                <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-xl transition-all duration-300 hover:border-primary/20 group" data-aos="fade-up" data-aos-delay={i * 100}>
                    <div class="w-14 h-14 rounded-xl bg-primary/10 flex items-center justify-center text-primary mb-6 group-hover:scale-110 transition-transform">
                        <service.icon className="w-7 h-7" />
                    </div>
                    <h3 class="text-2xl font-bold text-gray-900 mb-2">{service.title}</h3>
                    <p class="text-gray-600">{service.desc}</p>
                </div>
            ))}
        </div>
        
        <div class="mt-12 text-center md:hidden">
             <a href="/services" class="text-primary font-bold flex items-center justify-center gap-2">
                View All Services <ArrowRight className="w-5 h-5" />
            </a>
        </div>
      </div>
    </section>

    <TechSlider />
    <Testimonials />
    
    <!-- CTA Section -->
     <section class="py-24 bg-dark-bg relative overflow-hidden">
        <div class="absolute inset-0 bg-primary/20 blur-[100px] rounded-full pointer-events-none"></div>
        <div class="container mx-auto px-6 relative z-10 text-center">
            <h2 class="text-4xl md:text-5xl font-bold text-white mb-8" data-aos="fade-up">Ready to launch your next big thing?</h2>
            <a href="/contact" class="inline-block px-10 py-5 rounded-full bg-white text-dark-bg font-bold text-xl hover:bg-gray-100 transition-colors shadow-2xl hover:scale-105 transform duration-300" data-aos="fade-up" data-aos-delay="100">
                Let's Talk
            </a>
        </div>
     </section>
  </main>
  <Footer />
</Layout>
