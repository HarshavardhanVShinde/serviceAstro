---
import Layout from '../layouts/Layout.astro';
import Section from '../components/ui/Section.astro';
import { Award, Users, Zap } from 'lucide-react';
---

<Layout title="About Us | TechFirm">
  <!-- Hero -->
  <!-- Hero -->
  <section class="relative pt-32 pb-20 overflow-hidden text-center z-10">
    <div class="container mx-auto px-6 relative z-10">
        <h1 class="text-5xl md:text-7xl font-bold mb-8">We Are <span class="text-gradient">TechFirm</span></h1>
        <p class="text-xl text-text-300 max-w-3xl mx-auto leading-relaxed">
            A collective of engineers, designers, and strategists obsessed with building the future. 
            We don't just write code; we architect digital transformations.
        </p>
    </div>
    <!-- BG Gradients -->
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[400px] bg-secondary-500/10 rounded-full blur-[120px] pointer-events-none"></div>
  </section>

  <!-- Values -->
  <Section class="border-t border-white/5 relative z-10">
    <div class="container mx-auto px-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 text-center">
            {[
                { icon: Zap, title: "Innovation First", desc: "We constantly explore bleeding-edge tech to give you a competitive advantage." },
                { icon: Users, title: "Client Partnership", desc: "We work WITH you, not just for you. Your success is our KPI." },
                { icon: Award, title: "Engineering Excellence", desc: "Clean, scalable, and testable code. No shortcuts, no technical debt." }
            ].map(val => (
                <div class="p-8 rounded-2xl bg-white/5 border border-white/5 hover:-translate-y-2 transition-transform duration-300 backdrop-blur-sm">
                    <div class="w-16 h-16 rounded-full bg-secondary-500/20 flex items-center justify-center text-secondary-500 mx-auto mb-6">
                        <val.icon className="w-8 h-8" />
                    </div>
                    <h3 class="text-xl font-bold mb-4">{val.title}</h3>
                    <p class="text-text-300 leading-relaxed">{val.desc}</p>
                </div>
            ))}
        </div>
    </div>
  </Section>

  <!-- Story & Timeline -->
  <Section class="relative overflow-hidden">
     <div class="container mx-auto px-6 relative z-10">
        <div class="max-w-4xl mx-auto">
            <h2 class="text-4xl font-bold mb-12 text-center text-gradient">Our Journey</h2>
            
            <div class="border-l-2 border-white/10 ml-4 md:ml-0 space-y-12 pl-8 md:pl-0">
                {[
                    { year: '2022', title: 'The Inception', desc: 'TechFirm was founded with a single laptop and a vision to simplify complex software.' },
                    { year: '2023', title: 'Growing the Team', desc: 'Expanded to a team of 5, delivering our first enterprise-scale SaaS platform.' },
                    { year: '2024', title: 'AI Revolution', desc: 'Pivoted to include AI integration services, partnering with OpenAI and Anthropic APIs.' },
                    { year: '2025', title: 'Global Reach', desc: 'Served clients in over 10 countries, launching our signature "TechFast" framework.' },
                    { year: '2026', title: 'Today', desc: 'Continuing to push boundaries with a team of 20+ experts.' }
                ].map((item, i) => (
                    <div class="relative md:grid md:grid-cols-2 md:gap-12 md:items-center">
                         <div class="hidden md:block absolute left-1/2 -translate-x-1/2 w-4 h-4 rounded-full bg-secondary-500 border-4 border-primary-900 z-10"></div>
                         <div class="absolute -left-[39px] top-1 md:hidden w-4 h-4 rounded-full bg-secondary-500 border-4 border-primary-900"></div>

                         <div class={`md:text-right ${i % 2 === 0 ? '' : 'md:col-start-2'}`}>
                            <span class="text-accent-400 font-bold text-lg mb-2 block">{item.year}</span>
                            <h3 class="text-2xl font-bold text-white mb-2">{item.title}</h3>
                            <p class="text-text-300">{item.desc}</p>
                         </div>
                    </div>
                ))}
            </div>
        </div>
     </div>
  </Section>

</Layout>
