---
import Layout from '../layouts/Layout.astro';
import Section from '../components/ui/Section.astro';
import ServicesGrid from '../components/ServicesGrid';
---

<Layout title="Services | TechFirm">
  <!-- Page Header -->
  <section class="pt-32 pb-20 relative overflow-hidden">
     <div class="absolute inset-0 bg-gradient-to-b from-secondary-500/5 to-transparent pointer-events-none"></div>
     <div class="container mx-auto px-6 relative z-10 text-center">
       <h1 class="text-5xl md:text-7xl font-bold mb-6">Our Capabilities</h1>
       <p class="text-xl text-text-300 max-w-2xl mx-auto">
         Everything you need to scale your business in the digital age.
       </p>
     </div>
  </section>

  <Section>
    <div class="container mx-auto px-6">
        <ServicesGrid client:visible />
    </div>
  </Section>
  
  <!-- CTA Block -->
  <Section class="text-center py-32">
    <div class="container mx-auto px-6">
      <h2 class="text-4xl md:text-6xl font-bold mb-8">Ready to transform your business?</h2>
      <a href="/contact" class="inline-block px-10 py-4 rounded-full bg-gradient-to-r from-secondary-500 to-accent-400 text-white font-bold text-lg hover:shadow-xl hover:shadow-accent-400/20 transition-all">
        Get a Quote
      </a>
    </div>
  </Section>
</Layout>
