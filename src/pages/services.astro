---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import ServicesList from '../components/Services.astro'; // Reusing the grid component, but we will make it standalone or wrap it.
// Actually, let's reuse the Services component but maybe wrap it with a header.
---

<Layout title="Services | Velith Digital">
  <Navbar />
  <main class="pt-20">
    <!-- Page Header -->
    <section class="bg-dark-bg text-white py-20 relative overflow-hidden">
       <div class="absolute inset-0 bg-[linear-gradient(to_right,#ffffff05_1px,transparent_1px),linear-gradient(to_bottom,#ffffff05_1px,transparent_1px)] bg-[size:40px_40px]"></div>
       <div class="container mx-auto px-6 relative z-10 text-center">
         <h1 class="text-5xl md:text-6xl font-bold mb-6" data-aos="fade-up">Our Capabilities</h1>
         <p class="text-xl text-gray-400 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="100">
           Everything you need to scale your business in the digital age.
         </p>
       </div>
    </section>

    <ServicesList />
    
    <!-- CTA Block -->
    <section class="py-20 bg-gray-50">
      <div class="container mx-auto px-6 text-center">
        <h2 class="text-4xl font-bold text-gray-900 mb-8">Ready to transform your business?</h2>
        <a href="/contact" class="inline-block px-8 py-4 rounded-full bg-primary text-white font-bold text-lg hover:bg-primary-600 transition-colors shadow-lg hover:shadow-xl">
          Get a Quote
        </a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
