---
import Layout from '../layouts/Layout.astro';
import Section from '../components/ui/Section.astro';
import ContactForm from '../components/ContactForm';
import { Mail, MapPin, Phone } from 'lucide-react';
---

<Layout title="Contact Us | TechFirm">
  <Section class="min-h-screen pt-32 relative overflow-hidden">
    <!-- Decorative Background Elements -->
    <div class="absolute top-20 left-0 w-[500px] h-[500px] bg-secondary-500/10 rounded-full blur-[120px] pointer-events-none"></div>
    <div class="absolute bottom-0 right-0 w-[500px] h-[500px] bg-accent-400/10 rounded-full blur-[120px] pointer-events-none"></div>

    <div class="container mx-auto px-6 relative z-10">
      <div class="text-center max-w-2xl mx-auto mb-16">
        <h1 class="text-4xl md:text-6xl font-bold mb-6 tracking-tight">
          Get in <span class="text-transparent bg-clip-text bg-gradient-to-r from-secondary-400 to-accent-400">Touch</span>
        </h1>
        <p class="text-xl text-text-300 leading-relaxed">
          Ready to start your next project? We'd love to hear from you.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 max-w-6xl mx-auto">
        <!-- Contact Info -->
        <div class="space-y-8">
            <div class="glass-panel p-8 rounded-3xl border border-white/10 backdrop-blur-xl bg-white/5 hover:border-white/20 transition-all duration-300">
                <h3 class="text-2xl font-bold mb-8 text-white">Contact Information</h3>
                <div class="space-y-8">
                    <div class="flex items-start gap-5 group">
                        <div class="w-14 h-14 rounded-2xl bg-secondary-500/10 border border-secondary-500/20 text-secondary-400 flex items-center justify-center shrink-0 group-hover:scale-110 group-hover:bg-secondary-500/20 transition-all duration-300">
                            <Mail className="w-6 h-6" />
                        </div>
                        <div>
                            <h4 class="font-bold text-white mb-1 text-lg">Email Us</h4>
                            <a href="mailto:hello@techfirm.com" class="text-text-400 hover:text-secondary-400 transition-colors">hello@techfirm.com</a>
                        </div>
                    </div>

                    <div class="flex items-start gap-5 group">
                        <div class="w-14 h-14 rounded-2xl bg-accent-400/10 border border-accent-400/20 text-accent-400 flex items-center justify-center shrink-0 group-hover:scale-110 group-hover:bg-accent-400/20 transition-all duration-300">
                            <Phone className="w-6 h-6" />
                        </div>
                        <div>
                            <h4 class="font-bold text-white mb-1 text-lg">Call Us</h4>
                            <p class="text-text-400">+1 (555) 123-4567</p>
                        </div>
                    </div>

                    <div class="flex items-start gap-5 group">
                        <div class="w-14 h-14 rounded-2xl bg-white/5 border border-white/10 text-white flex items-center justify-center shrink-0 group-hover:scale-110 group-hover:bg-white/10 transition-all duration-300">
                            <MapPin className="w-6 h-6" />
                        </div>
                        <div>
                            <h4 class="font-bold text-white mb-1 text-lg">Visit Us</h4>
                            <p class="text-text-400 leading-relaxed">
                                123 Tech Avenue, Suite 400<br/>
                                San Francisco, CA 94107
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Map Placeholder / Embed -->
            <div class="glass-panel p-2 rounded-3xl h-80 overflow-hidden relative border border-white/10 backdrop-blur-xl">
                <iframe 
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d100939.98555098464!2d-122.507640204439!3d37.75781498660996!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x80859a6d00690021%3A0x4a501367f076adff!2sSan%20Francisco%2C%20CA!5e0!3m2!1sen!2sus!4v1705600000000!5m2!1sen!2sus" 
                    width="100%" 
                    height="100%" 
                    style="border:0;" 
                    allowfullscreen="" 
                    loading="lazy" 
                    referrerpolicy="no-referrer-when-downgrade"
                    class="rounded-2xl grayscale invert-[0.9] hover:grayscale-0 hover:invert-0 transition-all duration-700 opacity-80 hover:opacity-100"
                ></iframe>
            </div>
        </div>

        <!-- Form -->
        <div class="glass-panel p-8 md:p-10 rounded-3xl border border-white/10 backdrop-blur-xl bg-white/5 relative overflow-hidden">
            <div class="absolute top-0 right-0 w-64 h-64 bg-secondary-500/10 rounded-full blur-[80px] pointer-events-none"></div>
            <h3 class="text-2xl font-bold mb-8 text-white relative z-10">Send a Message</h3>
            <ContactForm client:visible />
        </div>
      </div>
    </div>
  </Section>
</Layout>
