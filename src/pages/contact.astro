---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import { Mail, Phone, MapPin, Send } from 'lucide-react';
---

<Layout title="Contact Us | Velith Digital">
  <Navbar />
  <main class="pt-20">
    <section class="py-24 bg-gray-50 min-h-screen">
      <div class="container mx-auto px-6">
        <div class="text-center max-w-2xl mx-auto mb-16" data-aos="fade-up">
            <h1 class="text-4xl md:text-5xl font-bold text-gray-900 mb-4">Let's Start a Conversation</h1>
            <p class="text-xl text-gray-600">Have a project in mind? We'd love to hear about it.</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-12 max-w-6xl mx-auto">
            <!-- Contact Info -->
            <div class="space-y-8" data-aos="fade-right">
                <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 flex items-start gap-4">
                    <div class="p-3 bg-primary/10 rounded-lg text-primary">
                        <Phone className="w-6 h-6" />
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-900 mb-1">Call Us</h3>
                        <p class="text-gray-600">+1 (555) 123-4567</p>
                        <p class="text-gray-500 text-sm mt-1">Mon-Fri from 9am to 6pm</p>
                    </div>
                </div>

                <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 flex items-start gap-4">
                    <div class="p-3 bg-secondary/10 rounded-lg text-secondary">
                        <Mail className="w-6 h-6" />
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-900 mb-1">Email Us</h3>
                        <p class="text-gray-600">hello@velith.digital</p>
                        <p class="text-gray-500 text-sm mt-1">We'll respond within 24 hours</p>
                    </div>
                </div>

                <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 flex items-start gap-4">
                    <div class="p-3 bg-indigo-500/10 rounded-lg text-indigo-500">
                        <MapPin className="w-6 h-6" />
                    </div>
                    <div>
                        <h3 class="font-bold text-gray-900 mb-1">Visit Us</h3>
                        <p class="text-gray-600">123 Innovation Drive<br/>Tech City, NY 10001</p>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="lg:col-span-2 bg-white rounded-3xl shadow-xl p-8 md:p-12" data-aos="fade-left">
                <form class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">First Name</label>
                            <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all" placeholder="John" />
                        </div>
                        <div>
                            <label class="block text-sm font-semibold text-gray-700 mb-2">Last Name</label>
                            <input type="text" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all" placeholder="Doe" />
                        </div>
                    </div>
                    
                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Email Address</label>
                        <input type="email" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all" placeholder="john@example.com" />
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Subject</label>
                        <select class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all bg-white">
                            <option>General Inquiry</option>
                            <option>Project Proposal</option>
                            <option>Careers</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-semibold text-gray-700 mb-2">Message</label>
                        <textarea rows="4" class="w-full px-4 py-3 rounded-lg border border-gray-200 focus:border-primary focus:ring-2 focus:ring-primary/20 outline-none transition-all" placeholder="Tell us about your project..."></textarea>
                    </div>

                    <button type="submit" class="w-full py-4 bg-gradient-to-r from-primary to-secondary text-white font-bold rounded-lg hover:opacity-90 transition-opacity flex items-center justify-center gap-2">
                        Send Message
                        <Send className="w-5 h-5" />
                    </button>
                </form>
            </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
